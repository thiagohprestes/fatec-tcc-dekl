@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.SetPasswordViewModel
@{
    ViewBag.Title = "Criar Senha";
}

<h2>@ViewBag.Title.</h2>
<p class="text-info">
    Você não tem um nome de usuário / senha local para este site.
    Adicione uma senha para a conta local para que você possa entrar sem um login externo.
</p>
<div class="row">
    <div class="col-md-6">
        <section id="sendCodeForm">
            @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <h4>Crie uma senha</h4>
                <hr />
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                    </small>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Criar senha" />
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
